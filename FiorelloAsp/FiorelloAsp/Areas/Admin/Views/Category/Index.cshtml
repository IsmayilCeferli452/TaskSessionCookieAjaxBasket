@model IEnumerable<CategoryProductVM>

@{
    ViewData["Title"] = "Index";
}


<div class="container mt-5">
    <div class="table-responsive">
        <table class="table">
            <h1 class="text-center">
                Categories
            </h1>
            <div>
                <a class="btn btn-danger btn-sm mt-3 mb-3" asp-area="Admin" asp-controller="Category" asp-action="Create">
                    <span>Create category</span>
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            @foreach (var item in Model)
            {
                <thead>
                    <tr>
                        <th><b>Category</b></th>
                        <th><b>Created Date</b></th>
                        <th><b>Products Count</b></th>
                        <th><b>Operations</b></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="c-data">
                        <td>@item.CategoryName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ProductCount</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-info"></i></a>
                            <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-marker"></i></a>
                            <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
                            </form>
                            <a class="btn btn-secondary btn-sm add-archive" data-id="@item.Id"><i class="fa-solid fa-box-archive"></i></a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>

@section js{
    <script src="~/admin/assets/js/archive.js"></script>
}